@model Desafio_Desenvolvimento.Application.ViewModel.ProcessoViewModel

@{
    ViewData["Title"] = "Detalhes do Processo";
}

<div class="d-flex justify-content-between">
    <h2>Detalhes do Processo</h2>
    <form asp-action="ConfirmarVisualizacao" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-primary" disabled="@(Model.DataVisualizacao.HasValue)">Confirmar Visualização</button>
    </form>
</div>

<hr />

<div>    
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">NPU</dt>
        <dd class="col-sm-10">@Model.Npu</dd>

        <dt class="col-sm-2">Data de Cadastro</dt>
        <dd class="col-sm-10">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Data de Visualização</dt>
        <dd class="col-sm-10">@(Model.DataVisualizacao?.ToString("dd/MM/yyyy HH:mm") ?? "Não visualizado ainda")</dd>

        <dt class="col-sm-2">UF</dt>
        <dd class="col-sm-10">@Model.UF</dd>

        <dt class="col-sm-2">Município</dt>
        <dd class="col-sm-10">@Model.MunicipioCodigo - @Model.Municipio</dd>
    </dl>    
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>
